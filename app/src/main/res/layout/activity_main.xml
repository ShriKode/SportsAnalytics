<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTennis"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/buttonBasketball"
        android:layout_alignParentStart="true"
        android:onClick="tennisStats"
        android:padding="10dp"
        android:text="Tennis" />

    <Button
        android:id="@+id/buttonBasketball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="Basketball" />

    <Button
        android:id="@+id/buttonFootball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonBasketball"
        android:padding="10dp"
        android:text="Football" />

    <ImageView
        android:id="@+id/statsGraph"
        android:layout_width="226dp"
        android:layout_height="288dp"
        android:layout_alignBottom="@+id/buttonFootball"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:onClick="editStats"
        android:text="Edit"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:onClick="viewStats"
        android:text="View"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/statsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonFootball"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="284dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Date"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewFirstServeMade"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/statsGraph"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="150dp"
        android:text="First Serves"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewSecondServeMade"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/statsGraph"
        android:layout_below="@+id/textViewFirstServeMade"
        android:layout_marginEnd="160dp"
        android:text="Second Serves"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewDoubleFaults"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/statsGraph"
        android:layout_below="@+id/textViewSecondServeMade"
        android:layout_marginEnd="160dp"
        android:text="Double Faults"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewForehandMissed"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textViewDate"
        android:layout_below="@+id/textViewDoubleFaults"
        android:text="ForehandsMissed"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewBackhandMissed"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/statsGraph"
        android:layout_below="@+id/textViewForehandMissed"
        android:layout_marginEnd="160dp"
        android:text="Backhands Missed"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewWinners"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/statsGraph"
        android:layout_below="@+id/textViewBackhandMissed"
        android:layout_marginEnd="159dp"
        android:text="Winners"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/editTextFirstServeMade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonTennis"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextSecondServeMade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextFirstServeMade"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextDoubleFaults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSecondServeMade"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextForehandMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDoubleFaults"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextBackhandMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFootball"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextWinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBackhandMissed"
        android:layout_marginStart="-160dp"
        android:layout_toEndOf="@+id/textViewFirstServeMade"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

</RelativeLayout>